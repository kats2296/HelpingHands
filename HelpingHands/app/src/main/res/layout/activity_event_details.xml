                    <!--android:textStyle="italic"-->
                    <!--/>-->

                    <LinearLayout
                        android:id="@+id/ll_eventname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_eventname"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/event_name"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:src="@drawable/ic_people_outline_black_24dp" />

                    </LinearLayout>


                    <View
                        android:id="@+id/line5"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />


                    <LinearLayout
                        android:id="@+id/ll_contactno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_contactno"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/contact_number"
                            android:inputType="number"
                            android:textSize="@dimen/sp14" />


                        <ImageView
                            android:layout_width="@dimen/dp20"
                            android:layout_height="@dimen/dp20"
                            android:src="@drawable/ic_phone_android_black_24dp" />

                    </LinearLayout>


                    <View
                        android:id="@+id/line2"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />


                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_address"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/address"
                            android:maxLength="15"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_location_on_black_24dp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/line6"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />


                    <LinearLayout
                        android:id="@+id/ll_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_date"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="Date"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_access_time_black_24dp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/line7"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:id="@+id/ll_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_time"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/timings"
                            android:inputType="text"
                            android:maxLength="15"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_access_time_black_24dp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/line10"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />


                    <LinearLayout
                        android:id="@+id/ll_number_of_people"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_number"
                            android:layout_width="@dimen/dp0"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:hint="@string/number_of_people"
                            android:inputType="number"
                            android:maxLength="15"
                            android:textSize="@dimen/sp14" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_people_outline_black_24dp" />

                    </LinearLayout>


                    <View
                        android:id="@+id/line8"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />

                    <!--<LinearLayout-->
                        <!--android:id="@+id/ll_number_volunteers"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
