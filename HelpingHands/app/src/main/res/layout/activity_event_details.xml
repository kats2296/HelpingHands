                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_weight="1"-->
                            <!--android:background="@null"-->
                            <!--android:hint="Number of Volunteers"-->
                            <!--android:inputType="number"-->
                            <!--android:maxLength="15"-->
                            <!--android:textSize="@dimen/sp14" />-->

                        <!--<ImageView-->
                            <!--android:layout_width="20dp"-->
                            <!--android:layout_height="20dp"-->
                            <!--android:src="@drawable/ic_people_outline_black_24dp" />-->

                    <!--</LinearLayout>-->


                    <!--<View-->
                        <!--android:id="@+id/line11"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="0.5dp"-->
                        <!--android:layout_marginTop="@dimen/dp5"-->
                        <!--android:background="@color/colorGray" />-->



                    <LinearLayout
                        android:id="@+id/ll_need_vol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_need_vol"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Need Volunteer Support ? "
                            android:textSize="@dimen/sp14" />

                        <RadioGroup
                            android:id="@+id/radioGroup1"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/radioButton2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="No" />
                        </RadioGroup>


                    </LinearLayout>


                    <View
                        android:id="@+id/line9"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/dp5"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:id="@+id/ll_pickup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pickup Service Available ? "
                            android:textSize="@dimen/sp14" />

                        <RadioGroup
                            android:id="@+id/radioGroup2"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp30"
                            android:layout_marginTop="@dimen/dp10"
                            android:orientation="horizontal">

                            <RadioButton
                                android:id="@+id/radioButton3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Yes" />

                            <RadioButton
                                android:id="@+id/radioButton4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="No" />
                        </RadioGroup>


                    </LinearLayout>

                    <Button
                        android:id="@+id/bt_submit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp40"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dp20"
                        android:layout_marginBottom="@dimen/dp30"
                        android:background="@drawable/sp_button"
                        android:paddingLeft="@dimen/dp20"
                        android:paddingRight="@dimen/dp20"
                        android:text="@string/submit"
                        android:textColor="@color/colorWhite" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>