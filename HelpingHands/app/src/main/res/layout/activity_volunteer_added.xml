<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.VolunteerAddedActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_playlist_add_check_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp100"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have been added to our Volunteer's List."
        android:textSize="@dimen/dp30"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp20"
        android:id="@+id/txt1"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please be on time."
        android:gravity="center"
        android:textSize="@dimen/sp20"
        android:textColor="@color/colorAccent"
        android:layout_marginTop="@dimen/sp20"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_gravity="center"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Got It !!"
        android:layout_marginTop="@dimen/dp30"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:id="@+id/okay"
        android:layout_gravity="center"
        />

</LinearLayout>